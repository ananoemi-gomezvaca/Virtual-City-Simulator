# DATOS -------------------------------------------------------------------
barrios <-st_read("E:/R_VCS")
barrios <- barrios |> 
  mutate(C_BARRIO = as.numeric(C_BARRIO),
         NOMBRE = c("Neighborhood 1","Neighborhood 2","Neighborhood 3",
                    "Neighborhood 4","Neighborhood 5","Neighborhood 6",
                    "Neighborhood 7","Neighborhood 8"))
datos_finales <- read_csv("E:/R_VCS")
datos_finales <- datos_finales |> 
  mutate(C_BARRIO = c(1,2,3,4,5,6,7,8))
barrios <- inner_join(barrios,datos_finales, by = join_by(C_BARRIO == C_BARRIO))
barrios <- barrios |> 
  select(C_BARRIO,NOMBRE,valorz)
variables <- read_excel("E:/E:/R_VCS",
                        sheet = "Data_Ciudad virtual")
barrios <- inner_join(barrios, variables, by = join_by(C_BARRIO == CODI_BARRI))
